<% content_for :title do %>
<%= @developer.name %>
<% end %>

<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <div id="nav-bar">
      <% if admin_logged_in? %>
        <%= link_to "All developers", developers_path, class: "btn btn-default" %>
      <% end %>
      <%= link_to "Create new application", new_developer_application_path(@developer), class: "btn btn-default" %>
      <%= link_to "Log out", logout_path, class: "btn btn-default" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <table class="table">
      <tr>
        <th>Name</th>
        <th>Type</th>
        <th>Api Key</th>
        <th></th>
      </tr>
      <% @applications.each do |application| %>
      <tr>
        <td><%= application.name %></td>
        <td><%= application.application_type.name %></td>
        <td><%= application.api_key %></td>
        <td><%=  link_to "Delete", developer_application_path(@developer, application), class: "btn btn-primary btn-command", method: :delete, data: { confirm: "Are you sure?"} %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>