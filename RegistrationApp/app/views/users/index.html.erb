<% content_for :title do %>
Users
<% end %>

<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <div id="nav-bar">
      
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <table class="table">
      <tr>
        <th>Email</th>
        <th></th>
      </tr>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td>
          <%= link_to "Show", user_path(user), class: "btn btn-primary btn-command" %><%= link_to "Delete", user_path(user), class: "btn btn-warning btn-command", method: :delete, data: { confirm: "Are you sure?"} %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>